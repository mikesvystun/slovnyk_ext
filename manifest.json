{
  "manifest_version": 2,
  
  "name": "Slovnyk",
  "description": "Suggest better vocabulary",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  

  "permissions": [
    "activeTab",
    "storage",
    "*://new.slovotvir.org.ua/"
  ]

}
